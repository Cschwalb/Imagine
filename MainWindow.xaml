<Window x:Name="Imagine_Software_Test_Suite" x:Class="Imagine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Imagine"
        mc:Ignorable="d"
        Title="Image Software" Height="450" Width="800">
    <Grid x:Name="ImagineSoftware">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition x:Name="Imagine_Software_Tester" Width="739*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="117" Margin="164,123,0,0" VerticalAlignment="Top" Width="336" Grid.Column="1">
            <TextBlock x:Name="HEK" HorizontalAlignment="Center" Height="44" TextWrapping="Wrap" Text="Hit The Enter Key" VerticalAlignment="Center" Width="233"/>
        </Border>
        <Button x:Name="button" Content="Enter" HorizontalAlignment="Left" Height="62" Margin="212,282,0,0" VerticalAlignment="Top" Width="240" Click="button_Click" Grid.Column="1"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="34" Margin="170,75,0,0" TextWrapping="Wrap" Text="Welcome!" VerticalAlignment="Top" Width="330" Grid.Column="1"/>

    </Grid>
</Window>
